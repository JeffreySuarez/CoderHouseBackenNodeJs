<div class="d-flex">
<div>
<h1 style="color:blue; font-weight: bold;" class="mt-4">Registro de Productos</h1>
<br>
<form method="POST" action="/" class="w-70" >
    <h2 class="text-center">Datos</h2>
    <div class="d-flex flex-column justify-content-center">
        <span>Ingrese el nombre: </span>
        <input type="text" name="name" id="name">
        <br>
        <span>Ingrese su edad: </span>
        <input type="number" name="edad" id="edad">
        <br>
        <span>Ingrese su genero: </span>
        <input type="text" name="genero" id="genero">
        <br>
        <span>Registre su n√∫mero de Celular :</span>
        <input type="number" name="celular" id="celular">
    </div>
    <br>
    <div class="d-flex justify-content-center">
        <input class="  btn-success mt-3 mb-5" type="submit" value="Registrar">
    </div>
</form>



<h2 style="color:crimson; font-weight: bold;">Registros cargados</h2>
{{#if listaProductos.error }}
        <h3 class="alert alert-danger">no se encontraron datos</h1>
            {{else}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Nombre</th>
                <th>Edad</th>
                <th>Genero</th>
                <th>Celular</th>
            </tr>
            <tbody>
                {{#each listaProductos}}
                <tr>
                    <td>
                        {{this.name}}
                    </td>
                    <td>
                        {{this.edad}}
                    </td>
                    <td>
                        {{this.genero}}
                    </td>
                    <td>
                        {{this.celular}}
                    </td>
                </tr>
                {{/each}}
                </tbody>
        </table>
    </div>
    {{/if}}
</div>

    <div class="container w-50">
        <form onsubmit="return addMessage(this)" class="d-flex flex-column border m-2">

            <h1 class="text-center">Centro de Mensajes</h1>
            <input type="text" id="nameChat" placeholder="Tu nombre" class="m-1">
            <input type="text" id="text" placeholder="Cuentanos algo" class="m-1">
            <input type="submit" value="Enviar" class="btn-primary container w-50">
            <p class="p-2"></p>


        </form>


    </div>

    </div>

